@model IEnumerable<SchoolManagementSystem.Exam>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Exam_Index";
}

<head>
    <!-- Custom styles for this page -->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Student Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.RollNo)</th>
                            <th> @Html.DisplayNameFor(model => model.TotalMarks)</th>
                            <th> @Html.DisplayNameFor(model => model.OutOfMarks)</th>
                            <th> @Html.DisplayNameFor(model => model.Class.ClassName)</th>
                            <th> @Html.DisplayNameFor(model => model.Subject.SubjectName)</th>
                            <th> Detail</th>
                            <th> Update</th>
                            <th> Delete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.RollNo)</th>
                            <th> @Html.DisplayNameFor(model => model.TotalMarks)</th>
                            <th> @Html.DisplayNameFor(model => model.OutOfMarks)</th>
                            <th> @Html.DisplayNameFor(model => model.Class.ClassName)</th>
                            <th> @Html.DisplayNameFor(model => model.Subject.SubjectName)</th>
                            <th> Detail</th>
                            <th> Update</th>
                            <th> Delete</th>


                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>  @Html.DisplayFor(modelItem => item.RollNo)</td>
                                <td>  @Html.DisplayFor(modelItem => item.TotalMarks)</td>
                                <td>  @Html.DisplayFor(modelItem => item.OutOfMarks)</td>
                                <td>  @Html.DisplayFor(modelItem => item.Class.ClassName)</td>
                                <td>  @Html.DisplayFor(modelItem => item.Subject.SubjectName)</td>
                                <td> @Html.ActionLink("Details", "Details", new { id = item.ExamId })</td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ExamId })

                                    }
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ExamId })

                                    }

                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
