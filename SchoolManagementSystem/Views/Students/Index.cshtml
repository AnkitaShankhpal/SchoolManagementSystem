@model IEnumerable<SchoolManagementSystem.Student>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Student_Index";
}
<head>
    <!-- Custom styles for this page -->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Student Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        
                        <thead>
                            <tr>
                                <th> @Html.DisplayNameFor(model => model.Name)</th>
                                <th> @Html.DisplayNameFor(model => model.RollNo)</th>
                                <th> @Html.DisplayNameFor(model => model.ClassId)</th>
                                <th> @Html.DisplayNameFor(model => model.StudentId)</th>
                                <th> @Html.DisplayNameFor(model => model.DOB)</th>
                                <th> @Html.DisplayNameFor(model => model.Address)</th>
                                <th> @Html.DisplayNameFor(model => model.Gender)</th>
                                <th> Detail</th>
                                <th> Update</th>
                                <th> Delete</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th> @Html.DisplayNameFor(model => model.Name)</th>
                                <th> @Html.DisplayNameFor(model => model.RollNo)</th>
                                <th> @Html.DisplayNameFor(model => model.ClassId)</th>
                                <th> @Html.DisplayNameFor(model => model.StudentId)</th>
                                <th> @Html.DisplayNameFor(model => model.DOB)</th>
                                <th> @Html.DisplayNameFor(model => model.Address)</th>
                                <th> @Html.DisplayNameFor(model => model.Gender)</th>
                                <th> Detail</th>
                                <th> Update</th>
                                <th> Delete</th>


                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>  @Html.DisplayFor(modelItem => item.Name)</td>
                                <td>  @Html.DisplayFor(modelItem => item.RollNo)</td>
                                <td>  @Html.DisplayFor(modelItem => item.ClassId)</td>
                                <td>  @Html.DisplayFor(modelItem => item.StudentId)</td>
                                <td>  @Html.DisplayFor(modelItem => item.RollNo)</td>
                                <td>  @Html.DisplayFor(modelItem => item.Address)</td>
                                <td>  @Html.DisplayFor(modelItem => item.Gender)</td>
                                <td> @Html.ActionLink("Details", "Details", new { id = item.StudentId })</td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentId })

                                    }
                                    </td>
                                    <td>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                        {
                                            @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })

                                        }
     
                                      </td>
                              </tr>

                            }
                        </tbody>
                  
                    </table>
            </div>
       </div>
 </div>



